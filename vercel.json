{
  "name": "marketplace-master",
  "version": 2,
  "public": false,
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "env": {
    "NODE_ENV": {
      "value": "production"
    },
    "NEXTAUTH_URL": {
      "description": "NextAuth URL for domain"
    },
    "NEXTAUTH_SECRET": {
      "description": "NextAuth secret key"
    },
    "NEXT_PUBLIC_SUPABASE_URL": {
      "description": "Supabase URL"
    },
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": {
      "description": "Supabase Anon Key"
    },
    "SUPABASE_SERVICE_ROLE_KEY": {
      "description": "Supabase Service Role Key"
    },
    "NEXT_PUBLIC_API_URL": {
      "description": "API Base URL"
    },
    "MARKETPLACE_AMAZON_TOKEN": {
      "description": "Amazon Agent Token"
    },
    "MARKETPLACE_SHOPEE_TOKEN": {
      "description": "Shopee Agent Token"
    },
    "MARKETPLACE_MERCADOLIVRE_TOKEN": {
      "description": "MercadoLivre Agent Token"
    },
    "MARKETPLACE_SHEIN_TOKEN": {
      "description": "SHEIN Agent Token"
    },
    "MARKETPLACE_TIKTOKSHOP_TOKEN": {
      "description": "TikTok Shop Agent Token"
    },
    "MARKETPLACE_KAWAY_TOKEN": {
      "description": "Kaway Agent Token"
    },
    "NEXT_PUBLIC_SENTRY_DSN": {
      "description": "Sentry DSN for error tracking"
    }
  },
  "functions": {
    "app/api/**": {
      "maxDuration": 60
    }
  },
  "headers": [
    {
      "source": "/:path*",
      "headers": [
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,DELETE,PATCH,POST,PUT,OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type,Authorization"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        }
      ]
    }
  ],
  "regions": [
    "gru1",
    "sfo1",
    "lhr1"
  ],
  "git": {
    "deploymentEnabled": {
      "main": true,
      "staging": true
    }
  }
}
